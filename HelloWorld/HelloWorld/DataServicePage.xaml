<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.DataServicePage">
    <TableView Intent="Form">
        <TableRoot>
            <TableSection>
                <EntryCell x:Name="title" Text="{Binding Title}" Label="Title" Placeholder="(eg Shopping)" Completed="OnChange"/>
                <SwitchCell x:Name="notaficationsEnabled" Text="Notafications" On="{Binding notaficationsEnabled}" OnChanged="OnChange"/>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>